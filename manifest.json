{
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": [
          "*://*.xbox.com/*"
        ],
      "js": ["lib/convert.js"]
    }
    ],
  "icons" : {
    "48" : "images/medium.png",
    "128" : "images/large.png"
  },
  "page_action" :
  {
    "default_icon" : "images/schmall.png",
    "default_title" : "MSP Not For Me"
  },
  "name": "MSP Not For Me",
  "description": "Let your browser tell you how much your Microsoft Xbox Live purchases will be in real terms with this extension.",
  "version": "1.0",
  "permissions": [
      "tabs",
      "*://*.xbox.com/*"
    ]
}
